<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.browning.rex.aquatools.TabFragment1">


    <TextView
        android:id="@+id/cylinder_volume_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Cylinder Volume"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/CylinderHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cylinder_volume_result"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter height in inches"
        android:inputType="numberDecimal"
        android:padding="20dp" />

    <EditText
        android:id="@+id/CylinderRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CylinderHeight"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter radius in inches"
        android:inputType="numberDecimal"
        android:padding="20dp" />

    <Button
        android:id="@+id/CylinderButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CylinderRadius"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Calculate" />

    <TextView
        android:id="@+id/CylinderVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="@string/answer_will_appear_here"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</RelativeLayout>